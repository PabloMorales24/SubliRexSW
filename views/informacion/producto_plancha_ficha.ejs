<%- include('../partials/header') %>

<div class="container py-4" style="max-width:900px">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="h4 mb-0"><%= title %></h2>
    <div class="d-flex gap-2">
      <a href="/informacion" class="btn btn-outline-secondary">
        <i class="fa fa-arrow-left"></i> Volver
      </a>
      <a href="/informacion/<%= ficha.id %>/editar" class="btn btn-primary">
        <i class="fa fa-pen"></i> Editar
      </a>
    </div>
  </div>

  <div class="card shadow-sm border-0">
    <div class="card-body">
      <div class="row g-4">
        <div class="col-md-8">
          <dl class="row mb-0">
            <dt class="col-sm-4">Producto</dt>
            <dd class="col-sm-8"><%= ficha.producto %></dd>

            <dt class="col-sm-4">Plancha</dt>
            <dd class="col-sm-8"><%= ficha.plancha %></dd>

            <dt class="col-sm-4">Temperatura (°C)</dt>
            <dd class="col-sm-8"><%= (ficha.temperatura ?? '—') %></dd>

            <dt class="col-sm-4">Tiempo (s)</dt>
            <dd class="col-sm-8"><%= (ficha.tiempo ?? '—') %></dd>

            <dt class="col-sm-4">Actualización</dt>
            <dd class="col-sm-8"><%= (ficha.updated_at?.toLocaleString?.() || ficha.updated_at) %></dd>
          </dl>
        </div>

        <div class="col-md-4 text-center">
          <% if (ficha.plancha_imagen) { %>
            <img src="<%= ficha.plancha_imagen %>" alt="Plancha" class="rounded border"
                 style="max-width:100%; max-height:220px; object-fit:cover;">
          <% } else { %>
            <div class="text-muted border rounded p-5">Sin imagen</div>
          <% } %>
        </div>
      </div>

      <hr class="my-4">
