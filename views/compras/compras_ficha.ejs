<%- include('../partials/header') %>

<section class="container py-4" style="max-width:760px;">

  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="h4 mb-0">Compra #<%= compra.id %></h2>
    <a href="/compras/ordenes/<%= compra.id %>/pdf" class="btn btn-outline-secondary" target="_blank">
      <i class="fa fa-file-pdf"></i> PDF
    </a>
  </div>

  <div class="card mb-3">
    <div class="card-body">
      <p class="mb-1"><strong>Proveedor:</strong> <%= compra.proveedor %></p>
      <p class="mb-1"><strong>Registrada:</strong> <%= compra.creado_en.toLocaleString() %></p>
      <p class="mb-0"><strong>Usuario:</strong> <%= compra.usuario || '-' %></p>
    </div>
  </div>

  <div class="table-responsive mb-3">
    <table class="table table-sm table-striped">
      <thead class="table-dark">
        <tr>
          <th>Insumo</th>
          <th>Cantidad</th>
          <th>Precio U.</th>
          <th>Subtotal</th>
        </tr>
      </thead>
      <tbody>
        <% lineas.forEach(l=>{ %>
          <tr>
            <td><%= l.nombre %></td>
            <td><%= l.cantidad %></td>
            <td>Q<%= l.precio_unitario.toFixed(2) %></td>
            <td>Q<%= l.subtotal.toFixed(2) %></td>
          </tr>
        <% }) %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="3" class="text-end">TOTAL</th>
          <th>Q<%= compra.total_compra.toFixed(2) %></th>
        </tr>
      </tfoot>
    </table>
  </div>

  <a href="/compras/ordenes" class="btn btn-secondary">Regresar</a>
</section>

<%- include('../partials/footer') %>
