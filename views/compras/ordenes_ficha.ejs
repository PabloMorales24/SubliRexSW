<%- include('../partials/header') %>

<section class="container py-4" style="max-width:800px;">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="h4 mb-0">Orden de compra #<%= orden.id %></h2>
    <div class="d-flex gap-2">
      <a href="/compras/ordenes/<%= orden.id %>/pdf" target="_blank" class="btn btn-outline-secondary">
        <i class="fa fa-file-pdf"></i> PDF
      </a>
      <a href="/compras/ordenes" class="btn btn-secondary">
        <i class="fa fa-list"></i> Volver
      </a>
    </div>
  </div>

  <div class="card mb-4">
    <div class="card-body">
      <p class="mb-2"><strong>Proveedor:</strong> <%= orden.proveedor %></p>
      <p class="mb-0"><strong>Fecha / hora:</strong> <%= orden.fecha_hora_fmt %></p>
    </div>
  </div>

  <div class="table-responsive">
    <table class="table table-sm table-striped align-middle">
      <thead class="table-dark">
        <tr>
          <th>Insumo</th>
          <th class="text-end">Cantidad</th>
          <th class="text-end">P. unitario Q</th>
          <th class="text-end">Subtotal Q</th>
        </tr>
      </thead>
      <tbody>
        <% 
          let total = 0;
          items.forEach(it => {
            const sub = it.cantidad * it.precio_unitario;
            total += sub;
        %>
          <tr>
            <td><%= it.insumo %></td>
            <td class="text-end"><%= it.cantidad %></td>
            <td class="text-end"><%= Number(it.precio_unitario).toFixed(2) %></td>
            <td class="text-end"><%= sub.toFixed(2) %></td>
          </tr>
        <% }) %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="3" class="text-end">TOTAL</th>
          <th class="text-end"><%= total.toFixed(2) %></th>
        </tr>
      </tfoot>
    </table>
  </div>
</section>

<%- include('../partials/footer') %>
