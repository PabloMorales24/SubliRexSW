<%- include('../partials/header') %>

<!-- DataTables -->
<link rel="stylesheet"
      href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">

<div class="container py-4">
  <h2 class="h4 mb-3">Productos</h2>

  <a href="/inventario/productos/nuevo" class="btn btn-success mb-3">
    <i class="fa fa-plus"></i> Nuevo producto
  </a>

  <div class="table-responsive">
    <table id="tblProd" class="table table-sm table-striped align-middle">
      <thead class="table-dark">
        <tr>
          <th>#</th>
          <th>Foto</th>
          <th>Nombre</th>
          <th>Marca</th>
          <th>Material</th>
          <th>Color</th>
          <th>Precio sugerido</th>
          <th class="text-nowrap">Acciones</th>
        </tr>
      </thead>

      <tbody>
        <% productos.forEach(p => { %>
          <tr>
            <td><%= p.id %></td>

            <td>
              <% if (p.imagen) { %>
                <img src="<%= p.imagen %>"
                     style="width:40px;height:40px;object-fit:cover;">
              <% } else { %>—<% } %>
            </td>

            <td><%= p.nombre %></td>
            <td><%= p.marca    || '—' %></td>
            <td><%= p.material || '—' %></td>
            <td><%= p.color    || '—' %></td>

            <!-- Precio sugerido (antes precio_venta) -->
            <td>Q <%= (+p.precio_venta).toFixed(2) %></td>

            <td class="text-nowrap">
              <a href="/inventario/productos/<%= p.id %>"
                 class="btn btn-sm btn-info me-1">
                <i class="fa fa-eye"></i> Ver
              </a>
              <a href="/inventario/productos/<%= p.id %>/editar"
                 class="btn btn-sm btn-primary">
                <i class="fa fa-pen"></i> Editar
              </a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>

<!-- JS -->
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script>
  $(function () {
    $('#tblProd').DataTable({
      language: {
        search    : 'Buscar:',
        lengthMenu: 'Mostrar _MENU_ registros',
        info      : '_START_–_END_ de _TOTAL_',
        paginate  : { previous: 'Anterior', next: 'Siguiente' }
      }
    });
  });
</script>

<%- include('../partials/footer') %>
