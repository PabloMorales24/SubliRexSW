<%- include('../partials/header') %>

<!-- DataTables CSS -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">

<div class="container py-4">
  <h2 class="h4 mb-3">Materiales</h2>

  <a href="/inventario/materiales/nuevo" class="btn btn-success mb-3">
    <i class="fa fa-plus"></i> Nuevo material
  </a>

  <div class="table-responsive">
    <table id="tblMateriales" class="table table-sm table-striped align-middle">
      <thead class="table-dark">
        <tr>
          <th>#</th>
          <th>Nombre</th>
          <th>Descripción</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% materiales.forEach(m => { %>
          <tr>
            <td><%= m.id %></td>
            <td><%= m.nombre %></td>
            <td><%= m.descripcion %></td>
            <td class="text-nowrap">
              <a href="/inventario/materiales/<%= m.id %>" class="btn btn-sm btn-info me-1">
                <i class="fa fa-eye"></i> Ver
              </a>
              <a href="/inventario/materiales/<%= m.id %>/editar" class="btn btn-sm btn-primary">
                <i class="fa fa-pen"></i> Editar
              </a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>

<!-- jQuery & DataTables -->
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script>
  $(function () {
    $('#tblMateriales').DataTable({
      language: {
        search: "Buscar:",
        lengthMenu: "Mostrar _MENU_ registros",
        info: "_START_–_END_ de _TOTAL_",
        paginate: { previous: "Anterior", next: "Siguiente" }
      }
    });
  });
</script>

