<%- include('partials/header') %>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet"/>

<style>
  :root{
    --srex-primary:#2b2e62;
    --srex-accent:#00bb00;
  }
  .card-cubo{
    background:var(--srex-primary);
    color:#fff;
    width:230px;
    border-radius:1rem;
    box-shadow:0 4px 10px rgba(0,0,0,.25);
    transition:transform .15s ease-in-out;
  }
  .card-cubo:hover{transform:scale(1.04);}
</style>

<div class="container-fluid py-4">

  <!-- ENCABEZADO -->
  <header class="mb-4 d-flex align-items-center justify-content-between">
    <div>
      <h1 class="h2 fw-bold mb-1">Compras</h1>
      <p class="text-muted mb-0">
        Registra compras y accede rápidamente a proveedores, productos e insumos.
      </p>
    </div>
    <a href="/" class="btn btn-outline-light">
      <i class="fa fa-tachometer-alt"></i> Dashboard
    </a>
  </header>

  <!-- TARJETAS DEL MENÚ -->
  <div class="row g-4 justify-content-center">

    <!-- Compra de nuevo producto -->
    <div class="col-6 col-md-3 d-flex justify-content-center">
      <div class="card card-cubo p-3 text-center d-flex flex-column align-items-center">
        <i class="fa-solid fa-cart-plus fa-2x mb-2"></i>
        <small class="fw-semibold flex-grow-1">
          Compra (nuevo producto)
        </small>
        <a href="/compras/nuevo-producto" class="btn btn-sm btn-success mt-2 px-3">Entrar</a>
      </div>
    </div>

    <!-- Compra de insumos -->
    <div class="col-6 col-md-3 d-flex justify-content-center">
      <div class="card card-cubo p-3 text-center d-flex flex-column align-items-center">
        <i class="fa-solid fa-boxes-packing fa-2x mb-2"></i>
        <small class="fw-semibold flex-grow-1">
          Compra de insumos
        </small>
        <a href="/compras/ordenes" class="btn btn-sm btn-success mt-2 px-3">Entrar</a>
      </div>
    </div>

    <!-- Lista insumos -->
    <div class="col-6 col-md-3 d-flex justify-content-center">
      <div class="card card-cubo p-3 text-center d-flex flex-column align-items-center">
        <i class="fa-solid fa-boxes fa-2x mb-2"></i>
        <small class="fw-semibold flex-grow-1">
          Ver insumos
        </small>
        <a href="/compras/insumos" class="btn btn-sm btn-success mt-2 px-3">Ver</a>
      </div>
    </div>

    <!-- Proveedores -->
    <div class="col-6 col-md-3 d-flex justify-content-center">
      <div class="card card-cubo p-3 text-center d-flex flex-column align-items-center">
        <i class="fa-solid fa-truck fa-2x mb-2"></i>
        <small class="fw-semibold flex-grow-1">
          Proveedores
        </small>
        <a href="/inventario/proveedores" class="btn btn-sm btn-success mt-2 px-3">Ver</a>
      </div>
    </div>

    <!-- Registrar producto -->
    <div class="col-6 col-md-3 d-flex justify-content-center">
      <div class="card card-cubo p-3 text-center d-flex flex-column align-items-center">
        <i class="fa-solid fa-box-open fa-2x mb-2"></i>
        <small class="fw-semibold flex-grow-1">
          Registrar producto
        </small>
        <a href="/inventario/productos/nuevo" class="btn btn-sm btn-success mt-2 px-3">Ir</a>
      </div>
    </div>

    <!-- Stock -->
    <div class="col-6 col-md-3 d-flex justify-content-center">
      <div class="card card-cubo p-3 text-center d-flex flex-column align-items-center">
        <i class="fa-solid fa-boxes-stacked fa-2x mb-2"></i>
        <small class="fw-semibold flex-grow-1">
          Ver stock
        </small>
        <a href="/inventario/stock" class="btn btn-sm btn-success mt-2 px-3">Ver</a>
      </div>
    </div>

  </div>
</div>

<%- include('partials/footer') %>
