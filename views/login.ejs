<!DOCTYPE html>
<html lang="es" data-bs-theme="light">
<head>
  <meta charset="UTF-8">
  <title>SubliRex ‚Ä¢ Login</title>

  <!-- Aplica el tema guardado antes de pintar -->
  <script>
    (function () {
      const saved = localStorage.getItem('srex-theme');
      if (saved) document.documentElement.setAttribute('data-bs-theme', saved);
    })();
  </script>

  <!-- Bootstrap + Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">

  <style>
    /* Capa de fondo a pantalla completa, detr√°s de todo */
    .page-bg{
      position: fixed;
      inset: 0;
      z-index: -1;
      background: url('/img/login-bg.png') center / cover no-repeat fixed;
    }
    /* Overlay suave seg√∫n tema (para legibilidad) */
    .page-bg::after{
      content: "";
      position: absolute; inset: 0;
      background: rgba(255,255,255,.15);
    }
    [data-bs-theme="dark"] .page-bg::after{
      background: rgba(0,0,0,.45);
    }

    /* Centrado del contenido */
    body{
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 16px;
    }

    /* Tarjeta con efecto glass */
    .glass {
      max-width: 420px;
      width: 100%;
      backdrop-filter: blur(6px);
      border-radius: 16px;
      border: 1px solid rgba(255,255,255,.18);
      box-shadow: 0 10px 30px rgba(0,0,0,.25);
    }
    [data-bs-theme="light"] .glass { background: rgba(255,255,255,.88); }
    [data-bs-theme="dark"]  .glass { background: rgba(33,37,41,.78); border-color: rgba(255,255,255,.08); }

    /* Bot√≥n de tema */
    .theme-btn { position:absolute; right: 12px; top: 12px; }

    /* Marca */
    .brand { color: #2b2e62; }
    [data-bs-theme="dark"] .brand { color: #00bb00; }
  </style>
</head>
<body>

  <!-- üîª Fondo detr√°s de todo -->
  <div class="page-bg"></div>

  <main class="container" style="position:relative;">
    <div class="card p-4 glass mx-auto">

      <!-- Toggle tema -->
      <button id="themeToggle" class="btn btn-outline-secondary btn-sm theme-btn" type="button" title="Cambiar tema">
        <i id="themeIcon" class="bi bi-moon-stars"></i>
      </button>

      <!-- Logo / Marca -->
      <div class="text-center mb-3">
        <img src="/img/logo.png" alt="SubliRex" style="max-width: 160px" class="mb-2">
        
      </div>

      <% if (error) { %>
        <div class="alert alert-danger py-2 text-center mb-3"><%= error %></div>
      <% } %>

      <form method="POST" action="/login" autocomplete="on">
        <div class="mb-3">
          <label for="usuario" class="form-label">Usuario</label>
          <div class="input-group">
            <span class="input-group-text"><i class="bi bi-person"></i></span>
            <input type="text" id="usuario" name="usuario" class="form-control" required autocomplete="username">
          </div>
        </div>

        <div class="mb-3">
          <label for="contrasena" class="form-label">Contrase√±a</label>
          <div class="input-group">
            <span class="input-group-text"><i class="bi bi-lock"></i></span>
            <input type="password" id="contrasena" name="contrasena" class="form-control" required autocomplete="current-password">
            <button class="btn btn-outline-secondary" type="button" id="togglePwd" title="Mostrar/Ocultar">
              <i id="pwdIcon" class="bi bi-eye"></i>
            </button>
          </div>
        </div>

        <button type="submit" class="btn btn-primary w-100 mt-2">Ingresar</button>
      </form>
    </div>
  </main>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    // Mostrar / ocultar contrase√±a
    const pwd = document.getElementById('contrasena');
    const togglePwd = document.getElementById('togglePwd');
    const pwdIcon = document.getElementById('pwdIcon');
    togglePwd.addEventListener('click', () => {
      const show = pwd.type === 'password';
      pwd.type = show ? 'text' : 'password';
      pwdIcon.className = show ? 'bi bi-eye-slash' : 'bi bi-eye';
      togglePwd.setAttribute('aria-pressed', show.toString());
    });

    // Modo claro/oscuro
    const themeBtn  = document.getElementById('themeToggle');
    const themeIcon = document.getElementById('themeIcon');
    function applyTheme(t) {
      document.documentElement.setAttribute('data-bs-theme', t);
      localStorage.setItem('srex-theme', t);
      themeIcon.className = (t === 'dark') ? 'bi bi-brightness-high' : 'bi bi-moon-stars';
    }
    applyTheme(document.documentElement.getAttribute('data-bs-theme') || 'light');
    themeBtn.addEventListener('click', () => {
      const current = document.documentElement.getAttribute('data-bs-theme') || 'light';
      applyTheme(current === 'light' ? 'dark' : 'light');
    });
  </script>
</body>
</html>
