<%- include('partials/header') %>

<!-- Bootstrap y Font Awesome (por si tu layout no los incluye) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet"/>

<style>
  :root{
    --srex-primary:#2b2e62;
    --srex-accent:#00bb00;
  }
  .card-cubo{
    background:var(--srex-primary);
    color:#fff;
    width:230px;
    border-radius:1rem;
    box-shadow:0 4px 10px rgba(0,0,0,.25);
    transition:transform .15s ease-in-out;
  }
  .card-cubo:hover{transform:scale(1.04);}
</style>

<div class="container-fluid py-4">

  <!-- ENCABEZADO -->
  <header class="mb-4 d-flex align-items-center justify-content-between">
    <div>
      <h1 class="h2 fw-bold mb-1">Inventario</h1>
      <p class="text-muted mb-0">
        Administra productos, catálogos, bodegas y stock (existencias&nbsp;+ costos).
      </p>
    </div>
    <a href="/" class="btn btn-outline-light">
      <i class="fa fa-tachometer-alt"></i> Dashboard
    </a>
  </header>

  <!-- FILA 1 ────────────────────────────────────────────── -->
  <div class="row g-4 mb-4 justify-content-center">

    <!-- Productos -->
    <div class="col-6 col-md-3 d-flex justify-content-center">
      <div class="card card-cubo p-3 text-center d-flex flex-column align-items-center">
        <i class="fa-solid fa-box-open fa-2x mb-2"></i>
        <small class="fw-semibold flex-grow-1">
          Productos<br>Productos generales
        </small>
        <a href="/inventario/productos" class="btn btn-sm btn-success mt-2 px-3">Entrar</a>
      </div>
    </div>

    <!-- Colores -->
    <div class="col-6 col-md-3 d-flex justify-content-center">
      <div class="card card-cubo p-3 text-center d-flex flex-column align-items-center">
        <i class="fa-solid fa-palette fa-2x mb-2"></i>
        <small class="fw-semibold flex-grow-1">
          Colores<br>Lista de códigos
        </small>
        <a href="/inventario/colores" class="btn btn-sm btn-success mt-2 px-3">Entrar</a>
      </div>
    </div>

    <!-- Materiales -->
    <div class="col-6 col-md-3 d-flex justify-content-center">
      <div class="card card-cubo p-3 text-center d-flex flex-column align-items-center">
        <i class="fa-solid fa-cube fa-2x mb-2"></i>
        <small class="fw-semibold flex-grow-1">
          Materiales<br>Tipos y descripción
        </small>
        <a href="/inventario/materiales" class="btn btn-sm btn-success mt-2 px-3">Entrar</a>
      </div>
    </div>

    <!-- Formas -->
    <div class="col-6 col-md-3 d-flex justify-content-center">
      <div class="card card-cubo p-3 text-center d-flex flex-column align-items-center">
        <i class="fa-solid fa-shapes fa-2x mb-2"></i>
        <small class="fw-semibold flex-grow-1">
          Formas<br>Diseños estructurales
        </small>
        <a href="/inventario/formas" class="btn btn-sm btn-success mt-2 px-3">Entrar</a>
      </div>
    </div>
  </div>

  <!-- FILA 2 ────────────────────────────────────────────── -->
  <div class="row g-4 justify-content-center">

    <!-- Unidades -->
    <div class="col-6 col-md-3 d-flex justify-content-center">
      <div class="card card-cubo p-3 text-center d-flex flex-column align-items-center">
        <i class="fa-solid fa-ruler-combined fa-2x mb-2"></i>
        <small class="fw-semibold flex-grow-1">
          Unidades<br>Medidas disponibles
        </small>
        <a href="/inventario/unidades" class="btn btn-sm btn-success mt-2 px-3">Entrar</a>
      </div>
    </div>

    <!-- Bodegas -->
    <div class="col-6 col-md-3 d-flex justify-content-center">
      <div class="card card-cubo p-3 text-center d-flex flex-column align-items-center">
        <i class="fa-solid fa-warehouse fa-2x mb-2"></i>
        <small class="fw-semibold flex-grow-1">
          Bodegas<br>Ubicaciones físicas
        </small>
        <a href="/inventario/bodegas" class="btn btn-sm btn-success mt-2 px-3">Entrar</a>
      </div>
    </div>

    <!-- Proveedores -->
    <div class="col-6 col-md-3 d-flex justify-content-center">
      <div class="card card-cubo p-3 text-center d-flex flex-column align-items-center">
        <i class="fa-solid fa-truck fa-2x mb-2"></i>
        <small class="fw-semibold flex-grow-1">
          Proveedores<br>Datos de contacto
        </small>
        <a href="/inventario/proveedores" class="btn btn-sm btn-success mt-2 px-3">Entrar</a>
      </div>
    </div>

    <!-- Stock (incluye historial de costos) -->
    <div class="col-6 col-md-3 d-flex justify-content-center">
      <div class="card card-cubo p-3 text-center d-flex flex-column align-items-center">
        <i class="fa-solid fa-boxes-stacked fa-2x mb-2"></i>
        <small class="fw-semibold flex-grow-1">
          Stock<br>Existencias y precios
        </small>
        <a href="/inventario/stock" class="btn btn-sm btn-success mt-2 px-3">Entrar</a>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
