<%- include('../partials/header') %>
<div class="container py-4" style="max-width:640px">
  <h2 class="h4 mb-3"><%= title %></h2>
  <div class="card">
    <div class="card-body">
      <form method="post" action="/planchas/nuevo">
        <div class="mb-3">
          <label class="form-label">Nombre</label>
          <input type="text" name="nombre" class="form-control" required>
        </div>
        <div class="mb-3">
          <label class="form-label">URL de imagen (opcional)</label>
          <input type="text" name="imagen" class="form-control" placeholder="https://.../plancha.jpg">
        </div>
        <div class="d-flex justify-content-end gap-2">
          <a href="/informacion" class="btn btn-outline-secondary">Cancelar</a>
          <button class="btn btn-success" type="submit">Guardar</button>
        </div>
      </form>
    </div>
  </div>
</div>
<%- include('../partials/footer') %>
